<%= form_for @task do |f| %>
<% f.object.errors.full_messages.each do |msg| %>
	<li> <%= msg %> </li>
<% end %>
  <p>
    <%= f.label :title, "Title" %>
    <%= f.text_field :title %>
  </p>
  <p>  
    <%= f.label :description, "Description" %>
    <%= f.text_field :description %>
  </p> 
  <p> 
    <%= f.label :date, "Date" %>
    <%= f.date_select :date %>
  </p>
  <p>  
    <%= f.label :days_before, "Days Before" %>
    <%= f.text_field :days_before %>
  </p>  
  <p><%= f.submit "Save" %></p>
<% end %>
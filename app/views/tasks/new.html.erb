<h1>Tasks</h1>
 
<%= form_for @task do |f| %>
  <%= f.label :title, "Title" %>
  <%= f.text_field :title %><br>
  <%= f.label :description, "Description" %>
  <%= f.text_field :description %><br>
  <%= f.label :date, "Date" %>
  <%= f.text_field :date %><br>
  <%= f.label :days_before, "Days Before" %>
  <%= f.text_field :days_before %><br>
  <%= f.submit "Create" %>
<% end %>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Date</th>
    <th>Days</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
 
<% @tasks.each do |task| %>
  <tr>
    <td><%= task.title %></td>
    <td><%= task.description %></td>
    <td><%= task.date %></td>
    <td><%= task.days_before %></td>
    <td><%= link_to 'Show', task %></td>
    <td><%= link_to 'Edit', edit_task_path(task) %></td>
    <td><%= link_to 'Remove', task, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>
 
<br />